<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
     
    <PreferenceCategory
        android:title="General Preferences">
        <ListPreference
            android:key="PREF_MEASUREMENT_SYSTEM"
            android:title="Measurement System"
            android:summary="Preferred Measurement System"
            android:entries="@array/measurementName"
            android:entryValues="@array/measurementType"
            android:defaultValue="imp" />
        <CheckBoxPreference
            android:key="PREF_TIME_VIBRATE"
            android:title="Timer End Vibrate"
            android:summary="Device Vibrate at End of Timed Activities" />
    </PreferenceCategory>
 
</PreferenceScreen>