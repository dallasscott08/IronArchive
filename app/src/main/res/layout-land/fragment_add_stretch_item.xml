<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    style='"@android:style/IronArchiveTheme.Dialog"'>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/wname" 
        	android:textColor="#424242"/>
        <EditText
        	android:id="@+id/seditname"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:inputType="textCapWords" 
        	android:imeOptions="actionDone"
        	android:textColor="#424242"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/wtime" 
        	android:textColor="#424242"/>
        <EditText
        	android:id="@+id/sedittime"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:inputType="number" 
        	android:maxLength="4"
        	android:imeOptions="actionDone"
        	android:textColor="#424242"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/wsets" 
        	android:textColor="#424242"/>
        <EditText
        	android:id="@+id/seditset"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:inputType="number" 
        	android:maxLength="3"
        	android:imeOptions="actionDone"
        	android:textColor="#424242"/>
    </LinearLayout>    
    
    <CheckBox
	    android:id="@+id/sdelaytime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/qdelaytime" 
	    android:textColor="#424242"/>
    
    <Button
        android:id="@+id/button_commit_stretch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit_button"
        android:textColor="#FFFFFF"
        android:background="#33b5e5"/>
    
</LinearLayout>
