<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->

    <style name="FullscreenTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/IronArchiveTheme.ActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    
        <!-- Application theme. -->
    <style name="IronArchiveTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/IronArchiveTheme.ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/IronArchiveTheme.ActionBar.TabText</item>
        <item name="android:actionBarTabStyle">@style/IronArchiveTheme.ActionBar.TabView</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    
    <style name="IronArchiveTheme.ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/IronArchiveTheme.ActionBarStyle.TitleTextStyle</item>
	</style>

    <style name="IronArchiveTheme.ActionBarStyle.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    	
	<style name="IronArchiveTheme.ActionBar.TabText" parent="android:Widget.Holo.Light.ActionBar.TabText">
    	<item name="android:textColor">@color/blue</item>
  	</style>
  	
	<style name="IronArchiveTheme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
    	<item name="android:background">@color/blue</item>
  	</style>

	<style name="dialog_title_style" parent="android:Widget.Holo.Light.TextView">
    	<item name="android:background">@color/blue</item>
	</style>
	
	<style name="IronArchiveTheme.ActionBar.TabView" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
	    <item name="android:paddingLeft">1dip</item>
	    <item name="android:paddingRight">1dip</item>   
	</style>
    
</resources>
